{
    "name": "Open Jira Ticket",
    "description": "Open JIRA tickets using the address bar or via the toolbar",
    "manifest_version": 2,
    "version": "0.1",

    "omnibox": { 
        "keyword": "jira"
    },

    "browser_action": {
        "default_popup": "index.html"
    },

    "background": {
        "persistent": false,
        "scripts": ["js/toolbar.js"]
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "permissions": [
        "storage"
    ]
}